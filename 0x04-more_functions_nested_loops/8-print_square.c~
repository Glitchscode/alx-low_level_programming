	for (i = 1; i <= n; i++)
	{
		int j = 0;
		for (j = 1; j <= n; j++)
		{
			if (n <= 0)
			{
				_putchar('\n');
			}
			else if (n > 0)
			{
				_putchar('#');
			}
		}
		_putchar('\n');
	}
}
